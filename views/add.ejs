<%- include("./partials/header.ejs") %>

<div class="w-full h-screen px-5 py-7 bg-zinc-800">
<div class="w-full flex flex-col items-center justify-center">

    <h2 class="text-white text-3xl">Create New Pin</h2>
    <hr class="text-white w-1/3 mt-8">
    
    <form action="/add" method="post" enctype="multipart/form-data" class="flex flex-col gap-4 mt-8">
        <input type="file" name="image">
        <input type="text" name="title" placeholder="Title" class="px-2 py-3 w-full rounded-md">
        <textarea name="description" placeholder="Description" class="px-2 py-3 h-32 w-full rounded-md"></textarea>
        <input class="px-10 py-4 bg-red-700 w-full text-white rounded-md hover:cursor-pointer" type="submit" value="Create">
    </form>

</div>
</div>

